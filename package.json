{
  "name": "smartunlink",
  "version": "1.0.4",
  "description": "Standalone FlexRadio Discovery Proxy - Broadcasts VITA-49 discovery packets for VPN/remote connections",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:portable": "electron-builder --win portable"
  },
  "author": "SmartUnlink",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.smartunlink.app",
    "productName": "SmartUnlink",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "electron/**/*",
      "src/**/*",
      "assets/**/*",
      "config.json"
    ],
    "extraResources": [
      {
        "from": "config.json",
        "to": "config.json"
      }
    ]
  }
}
